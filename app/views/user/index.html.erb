
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Peeks", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Profile", user_path(:id => current_user.id) %></li>

        <li><%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
      </ul>
    </nav>
  </div>
</header>
<div class="container col-md-offset-1">
  <h1>All Users</h1>

  <br>
  <% @user.each do |user| %>
  <div class="row">
    <ul class="list-style-none list-inline" >
      <li div class= "col-md-1 thumbnail"><img src ="<%= user.user_photo %>" alt="picture"></li>
      <li class= "col-xs-1"><%= user.user_name %></li>
      <li class= "col-xs-2"><%= user.first_name %> <%= user.last_name %></li>
      <li class="col-md-1">
        <div class="btn btn-info">
          <% if current_user.following?(user) %>
            <%= link_to "Unfollow", unfollow_path(:id => user.id), :method => :post, :remote => true %>
          <% else %>
            <%= link_to "Follow", follow_path(:id => user.id), :method => :post, :remote => true %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
  <% end %>
</div>
